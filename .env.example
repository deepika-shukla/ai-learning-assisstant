# ============================================================
# Environment Variables
# Copy this file to .env and fill in your values
# ============================================================

# Required: OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# JWT Secret Key (generate a secure random string)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your_jwt_secret_key_here

# ============================================================
# Optional: External API Keys
# ============================================================

# YouTube Data API v3 (optional - enables real video search)
# Get from: https://console.cloud.google.com/
YOUTUBE_API_KEY=

# GitHub Token (optional - increases rate limit from 60 to 5000 req/hour)
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=

# ============================================================
# Database Configuration
# ============================================================

# SQLite (default) - no configuration needed
DATABASE_URL=learning_assistant.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/learning_assistant

# ============================================================
# Application Settings
# ============================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (set to false in production)
DEBUG=true

# API Host and Port
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit Port
STREAMLIT_PORT=8501
